{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "jest", "node"],
    "jsx": "preserve",
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": false
  },
  "include": ["./src", "./script", "tests/**/*"],
  "exclude": ["**/dist", "**/node_modules"]
}
